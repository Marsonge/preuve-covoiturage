{
  "name": "@pdc/service-notification",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "start": "yarn serve",
    "build": "yarn build-ts && yarn lint",
    "serve": "node dist/kernel.js",
    "watch-node": "nodemon dist/kernel.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "test": "mocha src/**/*.spec.ts",
    "test:integration": "mocha tests/**/*.spec.ts",
    "coverage-ci": "nyc --all --reporter=lcov mocha src/**/*.spec.ts tests/**/*.spec.ts",
    "coverage": "nyc --all --reporter=text mocha src/**/*.spec.ts tests/**/*.spec.ts",
    "watch-test": "yarn test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "yarn build && yarn watch-debug",
    "serve-debug": "nodemon --inspect dist/kernel.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"yarn watch-ts\" \"yarn watch-node\"",
    "cli": "cli"
  },
  "config": {
    "bootstrap": "./dist/bootstrap.js"
  },
  "dependencies": {
    "@pdc/core": "0.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.7",
    "chai": "^4.2.0",
    "concurrently": "^4.1.0",
    "mocha": "^6.1.3",
    "nodemon": "^1.18.11",
    "nyc": "^13.3.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.15.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-import-group-ordering": "^2.1.1",
    "typescript": "^3.4.3"
  }
}
