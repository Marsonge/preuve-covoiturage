{
  "name": "@pdc/api",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "workspaces": [
    "core",
    "proxy",
    "providers/*",
    "services/*",
    "ilos/packages/*"
  ],
  "repository": "git@github.com:betagouv/preuve-covoiturage.git",
  "author": "Beta Gouv <contact@covoiturage.beta.gouv.fr>",
  "contributors": [
    "Jonathan Fallon <jonathan.fallon@beta.gouv.fr>",
    "Nicolas MÃ©rigot <nicolas.merigot@beta.gouv.fr>",
    "Samuel Eyre <samuel.eyre@beta.gouv.fr>"
  ],
  "scripts": {
    "scalingo-prebuild": "/bin/sh ./scalingo/prebuild.sh",
    "scalingo-build": "run-s build:providers build:services build:proxy",
    "scalingo-postbuild": "find . -type d -name node_modules -exec rm -rf {} \\;",
    "start": "yarn workspace @pdc/proxy ilos http $PORT",
    "start-dev": "nodemon",
    "clean": "rm -rf ./**/dist",
    "watch": "lerna run --parallel watch",
    "ls": "lerna ls",
    "build": "run-s clean build:providers build:services build:proxy",
    "build:proxy": "lerna run --scope @pdc/proxy build",
    "build:providers": "lerna run --scope @pdc/provider-* build",
    "build:services": "lerna run --scope @pdc/service-* build",
    "coverage-ci": "lerna run --scope @pdc/* coverage-ci",
    "coverage": "lerna run --scope @pdc/* coverage",
    "format:fix": "pretty-quick --staged",
    "lint": "lerna run --scope @pdc/* lint",
    "test": "run-p test:unit test:integration",
    "test:unit": "lerna run --scope @pdc/* test",
    "test:integration": "lerna run --scope @pdc/* test:integration"
  },
  "keywords": [
    "betagouv",
    "covoiturage",
    "api",
    "carpooling"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/betagouv/preuve-covoiturage/issues"
  },
  "homepage": "https://github.com/betagouv/preuve-covoiturage#readme",
  "devDependencies": {
    "husky": "^3.0.0",
    "lerna": "^3.13.4",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "typescript": "^3.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run format:fix",
      "pre-push": "yarn run lint"
    }
  }
}
