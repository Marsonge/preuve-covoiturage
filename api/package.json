{
  "name": "@pdc/preuve-covoiturage",
  "version": "1.0.0",
  "description": "Preuve de Covoiturage",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "lint": "eslint --ignore-path .gitignore .",
    "test": "NODE_ENV=test mocha -t 5000",
    "docker-test": "cd .. && docker-compose run -e PORT=0 -e NODE_ENV=test -T api yarn test",
    "docker-test-unit": "yarn docker-test -g 'Unit tests:'",
    "docker-test-func": "yarn docker-test -g 'Functional tests:'",
    "migrate": "npx migrate-mongo up",
    "mig:up": "cd .. && docker-compose exec api npx migrate-mongo up",
    "mig:down": "cd .. && docker-compose exec api npx migrate-mongo down",
    "mig:status": "cd .. && docker-compose exec api npx migrate-mongo status",
    "precommit": "yarn lint",
    "seed": "node cli/seed.js",
    "process": "node cli/process-safe-journey.js",
    "process-trip": "node cli/process-trip.js",
    "fix-permissions": "node cli/fix-permissions.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/betagouv/preuve-covoiturage-api.git"
  },
  "keywords": [
    "betagouv",
    "covoiturage",
    "api",
    "carpooling"
  ],
  "author": "Jonathan Fallon <jonathan.fallon@beta.gouv.fr>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/betagouv/preuve-covoiturage-api/issues"
  },
  "homepage": "https://github.com/betagouv/preuve-covoiturage-api#readme",
  "dependencies": {
    "@sentry/node": "^4.3.0",
    "api-query-params": "^4.9.0",
    "axios": "^0.18.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "bull": "^3.5.2",
    "bull-arena": "^2.5.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "csv-parse": "^4.3.1",
    "express": "^4.16.4",
    "express-mung": "^0.5.1",
    "express-session": "^1.15.6",
    "faker": "^4.1.0",
    "generate-password": "^1.4.1",
    "google-libphonenumber": "^3.2.2",
    "helmet": "^3.14.0",
    "ibantools": "^2.0.0",
    "js-yaml": "^3.12.0",
    "jsonwebtoken": "^8.3.0",
    "lodash": "^4.17.11",
    "migrate-mongo": "^5.0.1",
    "moment": "^2.22.2",
    "mongoose": "^5.4",
    "multer": "^1.4.1",
    "node-mailjet": "^3.3.1",
    "normalize-url": "^4.1.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "slugify": "^1.3.4",
    "supertest": "^4.0",
    "swagger-ui-express": "^4.0.2"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "git-pre-commit": "^2.1",
    "mocha": "^6.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mongo": true,
      "mocha": true
    },
    "extends": "airbnb",
    "rules": {
      "no-underscore-dangle": "off",
      "object-curly-newline": "off"
    }
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "cli/*",
      "config/*",
      "documentation/*",
      "node_modules/*",
      "test/*"
    ],
    "delay": "200"
  }
}
