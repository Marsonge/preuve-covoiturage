{
  "name": "@pdc/api",
  "private": true,
  "repository": "git@github.com:betagouv/preuve-covoiturage.git",
  "author": "Beta Gouv <contact@covoiturage.beta.gouv.fr>",
  "contributors": [
    "Jonathan Fallon <jonathan.fallon@beta.gouv.fr>",
    "Nicolas MÃ©rigot <nicolas.merigot@beta.gouv.fr>",
    "Samuel Eyre <samuel.eyre@beta.gouv.fr>"
  ],
  "scripts": {
    "clean": "rm -rf ./**/dist",
    "precommit": "run-s format:fix lint",
    "watch": "lerna run --parallel watch-ts",
    "ls": "lerna ls",
    "build": "run-s clean build:core build:ilos build:providers build:services build:proxy",
    "build:core": "lerna run --scope @pdc/core build",
    "build:proxy": "lerna run --scope @pdc/proxy build",
    "build:ilos": "lerna run --scope @ilos/* build",
    "build:providers": "lerna run --scope @pdc/provider-* build",
    "build:services": "lerna run --scope @pdc/service-* build",
    "format:fix": "pretty-quick --staged",
    "lint": "lerna run --parallel lint",
    "test": "lerna run --parallel test"
  },
  "keywords": [
    "betagouv",
    "covoiturage",
    "api",
    "carpooling"
  ],
  "workspaces": [
    "core",
    "ilos-validator",
    "proxy",
    "providers/*",
    "services/*"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/betagouv/preuve-covoiturage/issues"
  },
  "homepage": "https://github.com/betagouv/preuve-covoiturage#readme",
  "devDependencies": {
    "husky": "^2.4.0",
    "lerna": "^3.13.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "tslint": "^5.17.0"
  }
}
