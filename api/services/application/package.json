{
  "name": "@pdc/service-application",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "ilos": "ilos",
    "build": "tsc",
    "watch": "tsc -w",
    "test:unit": "exit 0",
    "test:integration": "ava --config ava.integration.cjs",
    "coverage:ci": "nyc --all --reporter=lcov ava --config ava.coverage.cjs",
    "coverage": "nyc --all --reporter=text ava --config ava.coverage.cjs"
  },
  "main": "./dist/bootstrap.js",
  "config": {
    "workingDir": "./dist",
    "bootstrap": "./bootstrap.js",
    "app": {}
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/interfaces/**",
      "src/types/**",
      "src/exceptions/**",
      "src/config/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@ilos/cli": "~0",
    "@ilos/common": "~0",
    "@ilos/connection-manager": "~0",
    "@ilos/connection-postgres": "~0",
    "@ilos/core": "~0",
    "@ilos/framework": "~0",
    "@pdc/helper-test": "~0",
    "@pdc/provider-middleware": "~0",
    "@pdc/provider-token": "~0",
    "@pdc/provider-validator": "~0"
  }
}
