{
  "name": "@pdc/service-certificate",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "cli": "ilos",
    "migrate": "echo 'no migrations'",
    "copy-static": "cp -R ./src/assets ./dist/",
    "start": "yarn serve",
    "build": "tsc && yarn copy-static",
    "watch": "tsc -w",
    "test": "echo '[provider-qrcode] No tests'; exit 0",
    "test:integration": "echo '[provider-qrcode] No tests'; exit 0",
    "coverage-ci": "NODE_ENV=testing nyc --report-dir=../../coverage/service-user --temp-dir=../../.nyc_output --all --reporter=lcovonly mocha --exit src/*.spec.ts src/**/*.spec.ts",
    "coverage": "NODE_ENV=testing nyc --all --reporter=text mocha --exit src/*.spec.ts src/**/*.spec.ts",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'"
  },
  "main": "./dist/bootstrap.js",
  "config": {
    "workingDir": "./dist",
    "bootstrap": "./bootstrap.js",
    "app": {}
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/interfaces/**",
      "src/types/**",
      "src/exceptions/**",
      "src/config/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@ilos/cli": "~0",
    "@ilos/common": "~0",
    "@ilos/config": "~0",
    "@ilos/connection-manager": "~0",
    "@ilos/connection-postgres": "~0",
    "@ilos/core": "~0",
    "@ilos/env": "~0",
    "@ilos/framework": "~0",
    "@ilos/package-acl": "~0",
    "@ilos/template": "~0",
    "@pdc/provider-date": "~0",
    "@pdc/provider-middleware": "~0",
    "@pdc/provider-qrcode": "~0",
    "@pdc/provider-validator": "~0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.6.8",
    "@types/sinon": "^7.5.0",
    "@types/sinon-chai": "^3.2.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "faker": "^4.1.0",
    "lodash": "^4.17.15",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "supertest": "^4.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  }
}
