{
  "name": "@pdc/service-acquisition",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "cli": "ilos",
    "migrate": "echo 'no migrations'",
    "start": "yarn serve",
    "build": "tsc",
    "watch": "tsc -w",
    "test": "NODE_ENV=testing mocha --exit src/*.spec.ts src/**/*.spec.ts",
    "test:integration": "NODE_ENV=testing mocha --exit tests/**/*.spec.ts",
    "coverage-ci": "NODE_ENV=testing nyc --all --reporter=lcov mocha -exit src/*.spec.ts src/**/*.spec.ts tests/**/*.spec.ts",
    "coverage": "NODE_ENV=testing nyc --all --reporter=text mocha -exit src/*.spec.ts src/**/*.spec.ts tests/**/*.spec.ts",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts'",
    "copy-static": "cp -R ./src/templates ./dist/"
  },
  "main": "./dist/bootstrap.js",
  "config": {
    "workingDir": "./dist",
    "bootstrap": "./bootstrap.js",
    "app": {}
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/interfaces/**",
      "src/types/**",
      "src/exceptions/**",
      "src/config/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@ilos/cli": "~0",
    "@ilos/common": "~0",
    "@ilos/connection-manager": "~0",
    "@ilos/connection-postgres": "~0",
    "@ilos/connection-redis": "~0",
    "@ilos/core": "~0",
    "@ilos/framework": "~0",
    "@pdc/provider-acl": "~0",
    "@ilos/queue": "~0",
    "@pdc/provider-middleware": "~0",
    "@pdc/provider-token": "~0",
    "@pdc/provider-validator": "~0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0"
  }
}
