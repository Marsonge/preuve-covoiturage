{
  "name": "@pdc/provider-middleware",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "typings": "dist/index.d.js",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test:unit": "ava --config ava.unit.cjs",
    "test:integration": "ava --config ava.integration.cjs",
    "coverage:ci": "nyc --all --reporter=lcov ava --config ava.coverage.cjs",
    "coverage": "nyc --all --reporter=text ava --config ava.coverage.cjs"
  },
  "dependencies": {
    "@ilos/common": "~0",
    "@ilos/core": "~0",
    "lodash": "^4.17.21"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/interfaces/**",
      "src/types/**",
      "src/exceptions/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
