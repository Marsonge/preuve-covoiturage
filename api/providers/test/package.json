{
  "name": "@pdc/helper-test",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "typings": "./dist/index.d.js",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn copy-static && tsc",
    "watch": "tsc -w",
    "test": "ava",
    "test:integration": "echo '[provider-sentry] No tests'; exit 0",
    "coverage-ci": "echo '[provider-sentry] No tests'; exit 0",
    "coverage": "nyc --all --reporter=text ava",
    "lint": "eslint 'src/**/*.ts'",
    "copy-static": "rm -rf ./dist/fixtures && cp -R ./src/fixtures ./dist/"
  },
  "ava": {
    "files": [
      "src/**/*.spec.ts"
    ],
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      }
    }
  },
  "dependencies": {
    "@ilos/common": "~0",
    "@ilos/framework": "~0",
    "@ilos/connection-postgres": "~0"
  },
  "devDependencies": {
    "@ilos/core": "~0"
  }
}
