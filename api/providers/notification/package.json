{
  "name": "@pdc/provider-notification",
  "version": "0.3.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.js",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint 'src/**/*.ts'",
    "coverage": "nyc --all --reporter=text mocha tests/**/*.spec.ts src/**/*.spec.ts",
    "test": "echo '[provider-notification] No tests'; exit 0",
    "test:integration": "echo '[provider-notification] No tests'; exit 0"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/interfaces/**",
      "src/types/**",
      "src/exceptions/**"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "@ilos/core": "~0",
    "@ilos/common": "~0",
    "@pdc/provider-template": "~0",
    "node-mailjet": "^3.3.1"
  }
}
